{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static",
      "config": {
        "mimeTypes": {
          ".css": "text/css",
          ".js": "application/javascript",
          ".svg": "image/svg+xml",
          ".jpg": "image/jpeg",
          ".png": "image/png"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/index.html",
      "headers": {
        "Content-Type": {
          ".css": "text/css",
          ".js": "application/javascript"
        }
      }
    }
  ]
}
